<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape>
            <corners android:radius="20dp" />
            <gradient android:angle="0" android:endColor="@color/purple_200" android:startColor="@color/purple_200" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="20dp" />
            <gradient android:angle="0" android:endColor="@color/purple_500" android:startColor="@color/purple_500" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <corners android:radius="20dp" />
            <gradient android:angle="0" android:endColor="@color/purple_200" android:startColor="@color/purple_200" />
        </shape>
    </item>
    <item>
        <shape>
            <corners android:radius="20dp" />
            <gradient android:angle="0" android:endColor="@color/purple_200" android:startColor="@color/purple_200" />
        </shape>
    </item>
</selector>